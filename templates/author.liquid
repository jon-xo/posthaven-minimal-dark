<section class="author-page">
  <header class="author-header">
    <h1>Posts by {{ author.name }}</h1>
    {% if author.bio %}
      <p class="author-bio">{{ author.bio }}</p>
    {% endif %}
  </header>
  
  <ul class="post-list">
    {% for post in posts %}
      <li class="post-item">
        <h2 class="post-title">
          <a href="{{ post.url }}">{{ post.title }}</a>
        </h2>
        
        <div class="post-meta">
          <time datetime="{{ post.published_at | date: '%Y-%m-%d' }}">
            {{ post.published_at | date: "%B %d, %Y" }}
          </time>
        </div>
        
        {% if post.excerpt %}
          <div class="post-excerpt">
            {{ post.excerpt }}
          </div>
        {% endif %}
        
        <a href="{{ post.url }}" class="read-more">Read more â†’</a>
      </li>
    {% endfor %}
  </ul>
</section>
