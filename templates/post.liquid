<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ post.title }}</h1>
    
    <div class="post-meta">
      <time datetime="{{ post.published_at | date: '%Y-%m-%d' }}">
        {{ post.published_at | date: "%B %d, %Y" }}
      </time>
      {% if post.author %}
        by <a href="{{ post.author.url }}">{{ post.author.name }}</a>
      {% endif %}
    </div>
    
    {% if post.tags.size > 0 %}
      <div class="tags">
        {% for tag in post.tags %}
          <a href="{{ tag.url }}" class="tag">{{ tag.name }}</a>
        {% endfor %}
      </div>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ post.content }}
  </div>
</article>

{% if post.previous or post.next %}
  <nav class="post-navigation">
    {% if post.previous %}
      <a href="{{ post.previous.url }}" class="previous">← {{ post.previous.title }}</a>
    {% endif %}
    
    {% if post.next %}
      <a href="{{ post.next.url }}" class="next">{{ post.next.title }} →</a>
    {% endif %}
  </nav>
{% endif %}
